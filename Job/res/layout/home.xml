<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	android:gravity="center">
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="#d3d3d3"
    android:orientation="horizontal" >
   
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="20sp"
        android:gravity="center"       
        android:text="职位搜索" />
    </LinearLayout>

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="80dp"
    android:background="#fff"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp" >

    <TableRow
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TableRow
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/home_buttton1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="3"
                    android:background="#64E110"
                    android:gravity="center"
                    android:text="兼职\n招聘"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/home_buttton2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#F5D73A"
                        android:text="个人中心"
                        android:textColor="#fff"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/home_buttton3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#F8766D"
                        android:text="职位资讯"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                </TableLayout>
            </TableRow>
        </TableLayout>
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/home_buttton4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="#2D3CFF"
                android:text="校园招聘"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/home_buttton5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="#F59C41"
                android:text="实习招聘"
                android:textColor="#fff"
                android:textSize="25sp" />
        </TableLayout>
    </TableRow>
</TableLayout>

</LinearLayout>
