<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="#d3d3d3"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/search_imge"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="20sp"
        android:gravity="center"       
        android:text="兼职招聘         " />
    </LinearLayout>
    
<LinearLayout 
     android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#d3d3d3"
        android:orientation="horizontal">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#f5f5f5">
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:background="#fff"
           android:src="@drawable/search_icon"/>
       <EditText 
           android:layout_width="1dp"
           android:layout_weight="1"
           android:layout_height="fill_parent"
           android:hint="请输入职位"
            android:background="#fff"/>
       
         </LinearLayout>
         </LinearLayout>
         
         <View 
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#0000CD"/>
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:showDividers="middle"
            android:background="#fff">
           <TableRow 
               android:id="@+id/search_Tablerow1">  
            <TextView
               android:id="@+id/aa_textView1"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:gravity="center|left"
               android:textSize="20sp"
               android:text="工作地点" />
            <TextView
               android:id="@+id/aa_text"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:gravity="center|right"
               android:textSize="20sp"
               android:text=""
               android:textAppearance="?android:attr/textAppearanceLarge" />

             <ImageButton
              android:id="@+id/imageButton1"
              android:layout_gravity="center"
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:scaleType="fitCenter"
              android:background="#fff"
              android:src="@drawable/searchnext" />
            </TableRow>
            <View 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"/>
            <TableRow
                android:id="@+id/search_Tablerow2">
            <TextView
               android:id="@+id/aa_textView2"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:gravity="center|left"
               android:textSize="20sp"
               android:text="工作时间" />
            <TextView
               android:id="@+id/aa_text1"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:gravity="center|right"
               android:textSize="13sp"
               android:hint="所有时间"/>

             <ImageButton
              android:id="@+id/imageButton2"
              android:layout_gravity="center"
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:scaleType="fitCenter"
              android:background="#fff"
              android:src="@drawable/searchnext" />
            </TableRow>
             <View 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"/>
            <TableRow 
                android:id="@+id/search_Tablerow3">  
            <TextView
               android:id="@+id/aa_textView3"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:gravity="center|left"
               android:textSize="20sp"
               android:text="工作类别" />
            <TextView
               android:id="@+id/aa_text2"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:gravity="center|right"
               android:textSize="18sp"
               android:hint="所有工作"/>
             <ImageButton
              android:id="@+id/imageButton3"
              android:layout_gravity="center"
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:scaleType="fitCenter"
              android:background="#fff"
              android:src="@drawable/searchnext" />
            </TableRow>
             <View 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"/>
        </TableLayout>
       
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="40dp"
        android:gravity="center">
    <Button
        android:id="@+id/search_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#48D1CC"
        android:text="搜索" />
     </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:orientation="horizontal" >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gohome"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/gohome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="首页" />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/goxiaoyuan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
             android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"          
            android:text="校园招聘" />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
             android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textColor="#FF8C00"
            android:text="兼职" />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/gouserinfo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
             android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/w1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"            
            android:text="个人中心 "/>
        </LinearLayout>
    </LinearLayout>
            
            
</LinearLayout>