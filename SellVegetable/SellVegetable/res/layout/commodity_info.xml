<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" > 
    
    <View
        android:id="@+id/c_view"
        android:background="#11cd6e"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout 
        android:background="#11cd6e"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">
        <ImageView   
           android:onClick="MyBack"     
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dp"
        	android:src="@drawable/bt_back_sclector" />
        <TextView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:textColor="#fff"
        	android:textSize="19sp"
        	android:text="商品信息">
            
        </TextView>
        <ImageView        
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:layout_marginRight="5dp"
        	android:src="@drawable/ic_menu"/>        
    </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >               
                 <ImageView
        			android:id="@+id/imageinfo"
        			android:layout_width="match_parent"
       				 android:layout_height="180dp"
       				 android:scaleType="centerCrop"
       				 android:src="@drawable/baackgrouand" />                 
                     <TextView
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:id="@+id/c_infos"
                         android:singleLine="false"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="信息"/>
                     <LinearLayout 
	    				android:layout_marginLeft="5dp"
	    				android:layout_marginRight="5dp"
	    				android:layout_width="match_parent"
	    				android:layout_height="wrap_content"	   
	    				android:orientation="horizontal">
    
    				<TextView
        				android:gravity="center|left"
        				android:id="@+id/c_price"
        				android:layout_width="0dp"
        				android:layout_height="wrap_content"
        				android:textColor="#f02208"
        				android:textSize="20sp"
        				android:layout_weight="1"
        				android:text="￥99.00" />
    				 <TextView
         				android:gravity="center|right"
         				android:layout_weight="1"
        				android:id="@+id/c_num"
        				android:layout_width="0dp"
        				android:layout_height="wrap_content"
        				android:textColor="#707070"
        				android:textSize="18sp"
        				android:text="10" />  				  				 
                     
                 </LinearLayout>
                 <View 
                     android:layout_width="match_parent"
                     android:layout_height="20dp"
                     android:background="#e6e6e6"/>
                 <LinearLayout
                     	android:layout_marginLeft="5dp" 
                     	android:layout_marginRight="5dp"
                    	 android:layout_width="match_parent"
                     	android:layout_height="wrap_content"
                     	android:layout_weight="1"
                    	 android:orientation="vertical">
    				 
                     <TextView
                         android:gravity="center|left"
                         android:layout_width="match_parent"
                         android:layout_height="30dp"
                         android:text="客户评价"/>
                        <View 
                     		android:layout_width="match_parent"
                     		android:layout_height="0.5dp"
                     		android:background="#8a8a8a"/>
                        
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"> 
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>   
                          
                           <TextView
                               android:gravity="center|right"
                               android:layout_weight="1"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#717171"
                               android:text="mx201****"/>                                                 
                     
    				</LinearLayout>
    				
                  <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="#717171"
                               android:text="不错，很新鲜"/>
                  
                  
                  
                                          
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"> 
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin"/>     
                           <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_xin1"/>   
                          
                           <TextView
                               android:gravity="center|right"
                               android:layout_weight="1"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#717171"
                               android:text="mx202****"/>                                                 
                     
    				</LinearLayout>
    				
                  <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="#717171"
                               android:text="菜很好"/>
    					</LinearLayout>
                 
            </LinearLayout>
        </ScrollView>
        
        <View 
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="#d3d3d3"/>
        
        <LinearLayout
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="45dp">       
            
            <LinearLayout
                android:id="@+id/kefu"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">                           

            	<ImageView
                	android:id="@+id/imageView2"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
               		 android:src="@drawable/kefu" />
            	
            	  <TextView
                	android:id="@+id/textView1"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="#515151"
                	android:text="客服" />
                
                </LinearLayout>
            <Button
                android:id="@+id/bt_car"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_car_selector"
                android:textColor="#fff"
                android:text="加入购物车" />

            <Button
                android:textColor="#fff"
                android:id="@+id/bt_buy"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_mai_selector"
                android:text="立即购买" />
            
            </LinearLayout>

</LinearLayout>
