<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <View
        android:id="@+id/view"
        android:background="#11cd6e"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout 
        android:background="#11cd6e"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">
        <ImageView        
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dp"
        	android:src="@drawable/ic_iconfont_scanning" />
        <TextView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:textColor="#fff"
        	android:textSize="19sp"
        	android:text="绿野鲜香">
            
        </TextView>
        <ImageView        
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:layout_marginRight="5dp"
        	android:src="@drawable/ic_iconfont_search"/>        
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"/>

    <LinearLayout
        android:layout_marginBottom="1dp"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">

   	<LinearLayout   
   	    android:id="@+id/home"	    
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:layout_weight="1"
    	android:orientation="vertical" >	    
	    <ImageView
	        android:id="@+id/homeimage"	
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	
	        android:scaleType="fitCenter"  
	        android:src="@drawable/tab_home"    	       
	        >
	    </ImageView>
	    <TextView      
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	       android:id="@+id/hometitle"	
	        android:text="首页"
	        android:textSize="12sp">
	    </TextView>

	</LinearLayout>       
	
   	<LinearLayout
   	     android:id="@+id/classify"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:layout_weight="1"
    	android:orientation="vertical" >	    
	    <ImageView
	        android:id="@+id/classifyimage"	
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:focusable="false"       
	        android:src="@drawable/tab_classify">
	    </ImageView>
	    <TextView      
	        android:id="@+id/classifytitle"	
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="分类"
	        android:textSize="12sp">
	    </TextView>

	</LinearLayout>       
	<LinearLayout
	     android:id="@+id/shoppingcart"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:layout_weight="1"
    	android:orientation="vertical" >	    

	    <ImageView
	        android:id="@+id/shoppingcartimage"	
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:focusable="false"       
	        android:src="@drawable/tab_shoppingcart">
	    </ImageView>
	    <TextView  
	        android:id="@+id/shoppingcarttitle"	    
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="购物车"
	        android:textSize="12sp">
	    </TextView>

	</LinearLayout>       
	<LinearLayout
	     android:id="@+id/personalcenter"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:layout_weight="1"
    	android:orientation="vertical" >	    

	    <ImageView
	        android:id="@+id/personalcenterimage"	
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:focusable="false"       
	        android:src="@drawable/tab_personalcenter">
	    </ImageView>
	    <TextView  
	        android:id="@+id/personalcentertitle"	    
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="个人中心"
	        android:textSize="12sp">
	    </TextView>

	</LinearLayout>       
    </LinearLayout>

</LinearLayout>