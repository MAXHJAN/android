<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <View
        android:id="@+id/c_view"
        android:background="#11cd6e"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout 
        android:background="#11cd6e"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">
        <ImageView   
           android:onClick="MyBack"     
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dp"
        	android:src="@drawable/bt_back_sclector" />
        <TextView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:textColor="#fff"
        	android:textSize="19sp"
        	android:text="账号与安全">
            
        </TextView>
        <ImageView        
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:layout_marginRight="5dp"
        	android:src="@drawable/ic_menu"/>        
    </LinearLayout>
    
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:text="手机号绑定"
                android:textSize="18sp"
                android:textColor="#FF8C00" />

            <EditText
                android:id="@+id/ephone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="phone" />

        </TableRow>    
       
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#d3d3d3" />

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:text="邮箱绑定"
                android:textSize="18sp"
                android:textColor="#FF8C00" />

            <EditText
                android:id="@+id/eemail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ems="10" 
                android:layout_weight="1"
                android:hint="email">
                <requestFocus />
            </EditText>
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#d3d3d3" />
         <TableRow
             android:background="@drawable/cache"
            android:id="@+id/changepswd"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:text="修改密码"
                android:textSize="18sp"
                android:textColor="#FF8C00" />
          <ImageView
              android:paddingRight="10dp"
            android:layout_gravity="right|center"
            android:id="@+id/image2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next" />

        </TableRow>
        
    </TableLayout>
	<View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/enter1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bt_login_selector"
            android:textColor="#11cd6e"
            android:text="确认" />

    </LinearLayout>
                

</LinearLayout>
