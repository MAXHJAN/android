<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout     
    	android:background="@drawable/baackgrouand"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:gravity="center"
        android:layout_weight="1">

     <mx.hnust.sellvegetable.view.CircleTextImageView
         xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:citv_border_overlay="true"
        app:citv_fill_color="#11cd6e"
        app:citv_text_text="登录注册"
        android:src="@drawable/nologin"
        app:citv_text_padding="5dp" 
        app:citv_text_size="12sp"
        app:citv_text_color="#fff"
        app:citv_border_width="2dp"
        app:citv_border_color="#d3d3d3"/>
     
    </LinearLayout>
		<View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d3d3d3" />
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical" >
        
        <LinearLayout             
        	android:layout_margin="10dp"
        	android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout 
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                 <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_daifukuan" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="待付款" />
            </LinearLayout>
            <LinearLayout 
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                 <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_daishouhuo" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="待收货" />
            </LinearLayout>
            <LinearLayout 
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                 <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_daipingjia" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="待评价" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                 <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tuihuo" />

                <TextView
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="退款/售后" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#dbdbdb" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/cache"
                android:clickable="true" 
                android:id="@+id/myorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_order" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="我的订单" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_next" />

            </LinearLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d3d3d3"/>
           <LinearLayout
               android:background="@drawable/cache"
               android:clickable="true" 
                android:id="@+id/mymassage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_massage" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="我的消息" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_next" />

            </LinearLayout>

            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d3d3d3"/>
           <LinearLayout
               android:background="@drawable/cache"
               android:clickable="true" 
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="系统设置" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_next" />

            </LinearLayout>
 			<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d3d3d3"/>
           <LinearLayout
               android:background="@drawable/cache"
               android:clickable="true" 
                android:id="@+id/advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_advise" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="建议反馈" />

               <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_next" />

            </LinearLayout>
 			<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d3d3d3"/>
           <LinearLayout
               android:background="@drawable/cache"
               android:clickable="true" 
               android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_about" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="关于我们" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_next" />

            </LinearLayout>
 			<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d3d3d3"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
